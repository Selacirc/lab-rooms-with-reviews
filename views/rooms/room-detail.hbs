<div>

        <h3>{{room.name}}</h3>
        <img src={{room.imageUrl}} alt="room">
        <p>{{room.description}}</p>
        <p>added by: {{room.owner.fullName}}</p>

        {{#if canEdit}}

            <a href="/rooms/edit/{{room._id}}">Edit Room</a>
            <a href="/rooms/delete/{{room._id}}">Delete Room</a>

        {{/if}}

        <a href="/rooms/all">Back to All Rooms</a>

        <hr>

        {{#unless canEdit}}

            <h4>Leave a review</h4>
            <form id="review" action="/reviews/new/{{room._id}}" method="post">
                <label for="review">Review:</label>
                <input type="text" name="comment" id="review">
                <button type="submit">Submit Review</button>
            </form>

        {{/unless}}


        {{#if reviews}}

            {{#each reviews}}

                <p>{{comment}}</p>
                <h6>- {{user.fullName}}</h6>

            {{/each}}

            {{else}}

            <p>No reviews yet</p>

        {{/if}}
    </div>